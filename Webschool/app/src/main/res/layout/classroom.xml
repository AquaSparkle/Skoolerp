<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:background="@drawable/green_bgsmall">

        <erp.skoolerp.utils.RoundedIV_bordered_white
            android:id="@+id/teach_pic"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/teach_pic"
            android:layout_alignTop="@+id/teach_pic"
            android:layout_alignBottom="@+id/teach_pic"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp">

            <erp.skoolerp.utils.Montserrat_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My class teacher"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:textAllCaps="true"/>

            <erp.skoolerp.utils.Montserrat_SemiBold
                android:id="@+id/teach_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="15.5sp"
                android:singleLine="true"
                android:layout_marginTop="3dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_envelope" />

                <erp.skoolerp.utils.Montserrat_Regular
                    android:id="@+id/teach_email"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_phone" />

                <erp.skoolerp.utils.Montserrat_Regular
                    android:id="@+id/teach_numb"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:orientation="vertical">


        <erp.skoolerp.utils.Montserrat_Medium
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="My Subjects"
            android:textSize="15sp"
            android:textColor="#000000"
            android:gravity="center"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sub_list"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"/>
    </LinearLayout>
</LinearLayout>